{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "siteName": {
            "type": "string"
        },
        "siteLocation": {
            "type": "string"
        },
        "Nicehash BTC": {
            "type": "string",
            "defaultValue": "3LUvVmhHLLZBSaprdSZYSBFnBu7ybZg7nh"
        },
        "repoUrl": {
            "type": "string"
        },
        "branch": {
            "type": "string"
        },
        "RandString": {
            "type": "string",
            "defaultValue": "[substring(uniqueString(newGuid()),0,4)]"
        }
    },
    "variables": {
    },
    "resources": [
        {
            "name": "[concat(parameters('siteName'),'-',parameters('RandString'))]",
            "type": "Microsoft.ContainerInstance/containerGroups",
            "apiVersion": "2018-04-01",
            "location": "[parameters('siteLocation')]",
            "tags": {
                "Docker": "Nicehash"
            },
            "properties": {
                "containers": [
                    {
                        "name": "[parameters('siteName')]",
                        "properties": {
                            "image": "debar/xmrig",
                            "ports": [

                            ],
                            "environmentVariables": [
                                {
                                    "name": "XMRIG_USER",
                                    "value": "[concat(parameters('Nicehash BTC'),'.',parameters('RandString'))]"
                                }
                            ],
                            "resources": {
                                "requests": {
                                    "memoryInGB": 2.5,
                                    "cpu": 4
                                }
                            }
                        }
                    }
                ],
                "restartPolicy": "Never",
                "osType": "Linux"
            }
        }
    ],
    "outputs": {
    },
    "functions": [
    ]
}
